generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  emailVerified DateTime?
  image     String?  // For NextAuth profile picture (avatar)
  avatar    String?  // Custom avatar selection
  accounts  Account[]
  sessions  Session[]
  conversations Conversation[]
  createdAt DateTime @default(now())
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  user               User    @relation(fields: [userId], references: [id])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires   DateTime
  @@unique([identifier, token])
}

model Conversation {
  id        String    @id @default(cuid())
  title     String
  fileName  String
  filePath  String
  summary   String?   // AI-generated summary of the document
  summaryFormatted String? // Formatted summary (HTML)
  commonQuestions String? // 3 most common questions users can ask about this PDF
  commonQuestionsFormatted String? // Formatted common questions (HTML)
  summaryContentType String @default("text") // Content type for summary fields
  summaryGeneratedAt DateTime? // When summary was generated
  summaryProcessedAt DateTime? // When summary was processed/formatted
  processingStatus String @default("pending") // "pending", "processing", "completed", "failed"
  createdAt DateTime  @default(now())
  messages  Message[]
  userId    String?
  user      User?     @relation(fields: [userId], references: [id])
}

model Message {
  id             String      @id @default(cuid())
  role           String
  text           String      // Original/raw content
  formattedText  String?     // Processed/formatted content (HTML or markdown)
  contentType    String      @default("text") // "text", "markdown", "html"
  status         String      @default("completed") // "pending", "processing", "completed", "failed", "error"
  processedAt    DateTime?   // When content was processed
  createdAt      DateTime    @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId String
  error          String?     // Error message if processing failed
  parentMessageId String?    // For linking assistant messages to user messages
  }
